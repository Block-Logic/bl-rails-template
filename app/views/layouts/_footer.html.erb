<footer class="footer bg-light text-muted">
  <!-- Navigation  -->
  <section class="footer-navigation">
    <div class="container mx-auto">
      <div class="grid grid-cols-4 gap-4">
        <div class="basis-1/4">
          <div class="text-uppercase fw-bold mb-3"><%= COMPANY_NAME %></div>
          <p>
            This is company description.
          </p>
          <a href="<%= root_path %>">
            <%= image_tag 'logo.png', alt: t('assets.logo'), title: t('assets.logo'), class: 'footer-brand', width: "70" %>
          </a>
        </div>

        <div class="basis-1/4">
          <div class="text-uppercase fw-bold mb-3">Company</div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <%= link_to t('footer.nav_links.faq'), faq_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>

        <div class="basis-1/4">
          <div class="text-uppercase fw-bold mb-3">Conditions</div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <%= link_to t('footer.nav_links.terms_of_use'), terms_of_use_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to t('footer.nav_links.privacy_policy'), privacy_policy_path, class: 'nav-link' %>
            <li class="nav-item">
              <%= link_to t('footer.nav_links.opt_out'), new_opt_out_request_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? && current_user.is_admin? %>
              <li class="nav-item">
                <%= link_to t('footer.nav_links.opt_out_requests'), opt_out_requests_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="basis-1/4">
          <div class="text-uppercase fw-bold mb-3">Contact</div>
          <p>
            <i class="fa-solid fa-house me-3"></i><%= OUR_STREET_ADDRESS %><br />
            <span style="padding-left: 2.1rem;"><%= OUR_CITY_STATE_ZIP %></span>
          </p>
          <p>
            <i class="fa-solid fa-envelope me-3"></i><%= OUR_EMAIL_ADDRESS %>
          </p>
          <p>
            <i class="fa-solid fa-phone me-3"></i><%= OUR_TELEPHONE %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Copyright -->
  <div class="footer-copyright text-center p-3">
    <small>&copy; <%= Date.today.year %>  <%= COMPANY_LLC %></small>
  </div>
</footer>
