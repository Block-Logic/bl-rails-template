<header class="bg-slate-200 px-4 py-7">
  <nav class="container mx-auto">
    <div class="flex flex-wrap items-center justify-between">

      <div class="flex pr-10">
        <%= link_to root_path do %>
          <h1><%= image_tag 'logo.png', alt: "Logo", title: "Logo", width: "120" %></h1>
        <% end %>
      </div>

      <div data-collapse-toggle="navbar-dropdown" type="button" class="flex lg:hidden cursor-pointer" aria-controls="navbar-dropdown" aria-expanded="false">
        <%= image_tag 'burger.svg', width: "18" %>
      </div>

      <div class="hidden w-full lg:flex lg:w-auto items-center justify-between grow" id="navbar-dropdown">
        <div class="flex flex-col lg:flex-row gap-2 lg:gap-8 mt-8 lg:mt-0">
          <a href="#" class="heading-4 hover:text-slate-500">Menu Item 1</a>
          <a href="#" class="heading-4 hover:text-slate-500">Menu Item 2</a>
          <a href="#" class="heading-4 hover:text-slate-500">Menu Item 3</a>
          <a href="#" class="heading-4 hover:text-slate-500">Menu Item 4</a>
        </div>

        <hr class="h-px my-5 bg-slate-400 border-0 lg:hidden">

        <div class="flex flex-col lg:flex-row gap-2 lg:gap-8">
          <% if user_signed_in? %>
            <%= link_to "Edit Account", edit_user_registration_path, class: "heading-4 hover:text-slate-500" %>
            <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: "heading-4 hover:text-slate-500" do %>
              Sign Out <span aria-hidden="true" class="text-gray-500">&rarr;</span>
            <% end %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "heading-4 hover:text-slate-500" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "heading-4 hover:text-slate-500" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
