<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @opt_out_request %>

    <%= link_to 'Edit this opt_out_request', edit_opt_out_request_path(@opt_out_request), class: "btn-primary" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this opt_out_request', opt_out_request_path(@opt_out_request), method: :delete, class: "btn-primary" %>
    </div>
    <%= link_to 'Back to opt_out_requests', opt_out_requests_path, class: "bnt-secondary" %>
  </div>
</div>
