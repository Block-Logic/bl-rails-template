<div class="flex flex-wrap justify-between items-center gap-3 mb-5">
  <h2 class="heading-1">Opt Out Requests</h2>
  <%= link_to 'New Opt Out', new_opt_out_request_path, class: "btn-primary" %>
</div>

<div class="relative overflow-x-auto">
  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Request Type</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col" class="w-1/4">Meta Data</th>
      <th scope="col">Created At</th>
      <th scope="col" class="min-w-fit"></th>
    </tr>
    </thead>
    <tbody id="opt_out_requests">
    <%= render @opt_out_requests %>
    </tbody>
  </table>
</div>
