<div class="card max-w-md mx-auto">
  <div class="card-content">
    <h2 class="heading-2">Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "New password", class: "label" %>
        <% if @minimum_password_length %>
          <div class="text-sm mb-1"><%= @minimum_password_length %> characters minimum</div>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <%= f.submit "Change my password", class: "btn-primary" %>
    <% end %>
  </div>

  <hr class="border-slate-200" />

  <div class="card-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>

